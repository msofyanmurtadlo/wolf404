{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Wolf404 Jowo Kasar",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#variables" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wolf404",
          "match": "\\b(menowo|yenora|baleni|balekno|playon|undang)\\b"
        },
        {
          "name": "keyword.declaration.wolf404",
          "match": "\\b(garap|gerombolan|wujud)\\b"
        },
        {
          "name": "constant.language.wolf404",
          "match": "\\b(bener|salah|kopong)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.wolf404",
          "match": "\\b(ketok|dowo|isi|takon|moco_file|nulis_file|layani_web)\\b"
        },
        {
          "name": "entity.name.function.wolf404",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.wolf404",
          "match": "(\\+|\\-|\\*|/|%|==|!=|<|>|<=|>=|=|:|\\.)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.wolf404",
          "match": "(\\.)"
        },
        {
          "name": "punctuation.bracket.wolf404",
          "match": "(\\(|\\))"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.wolf404",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.wolf404",
          "match": "\\\\."
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.wolf404",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.language.special.wolf404",
          "match": "\\$this\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wolf404",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.wolf404",
          "match": "//.*$"
        }
      ]
    }
  },
  "scopeName": "source.wolf404"
}
