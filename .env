# Wolf404 Framework Configuration
# Environment: development

# Application
APP_NAME="Wolf404 Framework"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database
DB_CONNECTION=sqlite
DB_DATABASE=database/database.db

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Security
APP_KEY=wolf404_secret_key_change_this_in_production
JWT_SECRET=jwt_secret_key_change_this

# Server
SERVER_PORT=8080
SERVER_HOST=localhost

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Admin Default
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@wolf404.dev
ADMIN_PASSWORD=admin123
